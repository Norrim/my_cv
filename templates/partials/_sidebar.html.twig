<aside class="col-12 col-md-12 col-xl-3">
    <div class="sidebar box-outer sticky-column">
        <div class="sidebar__base-info">
            {% if is_granted('ROLE_ADMIN') %}
                <div class="text-xl-center">
                    <button type="button" class="btn btn-sm btn-secondary js-open-crud-modal" data-url="{{ path('personal_info_edit') }}">
                        <i class="feathericon-edit"></i> {{ 'global.edit'|trans }}
                    </button>
                </div>
            {% endif %}
            <figure class="avatar-box">
                <img src="{{ asset('assets/images/my-avatar.png') }}" alt="{{ personalInfo.firstname }} {{ personalInfo.name }}">
            </figure>

            <div class="text-xl-center">
                <h3 class="title title--h3 sidebar__name">{{ personalInfo.firstname }} {{ personalInfo.name }}</h3>
                <div class="badge">{{ personalInfo.title }}</div>
            </div>

            <button class="btn btn--small btn--icon-right sidebar__btn js-btn-toggle"><span>Show Contacts</span><i class="feathericon-chevron-down"></i></button>
        </div>

        <div class="sidebar__additional-info js-show">
            <div class="separation"></div>
            <ul class="details-info">
                <!-- Email -->
                <li class="details-info__item">
                    <span class="box icon-box"><i class="font-icon icon-envelope"></i></span>
                    <div class="contacts-block__info">
                        <span class="overhead">Email</span>
                        <a class="text-overflow" href="mailto:{{ personalInfo.email }}" title="{{ personalInfo.email }}">{{ personalInfo.email }}</a>
                    </div>
                </li>
                <!-- Phone -->
                <li class="details-info__item">
                    <span class="box icon-box"><i class="font-icon icon-phone"></i></span>
                    <div class="contacts-block__info">
                        <span class="overhead">Téléphone</span>
                        <span class="text-overflow" title="{{ personalInfo.phoneNumber }}">{{ personalInfo.phoneNumber }}</span>
                    </div>
                </li>

                <!-- Location -->
                <li class="details-info__item">
                    <span class="box icon-box"><i class="font-icon icon-location"></i></span>
                    <div class="contacts-block__info">
                        <span class="overhead">Localisation</span>
                        <span class="text-overflow" title="{{ personalInfo.localisation }}">{{ personalInfo.localisation }}</span>
                    </div>
                </li>
            </ul>
            <div class="separation d-xl-none"></div>

            <!-- Social -->
            {% include 'partials/_socials.html.twig' %}
        </div>
    </div>
</aside>
