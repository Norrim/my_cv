<!-- CONTACT -->
<div id="contact" class="tab-pane fade _tabcontent" role="tabpanel" aria-labelledby="contact-tab">
    <div class="pb-0 pb-sm-2">
        <h1 class="title title--h1 title__separate">Contact</h1>
    </div>

    <!-- Contact -->

    <h2 class="title title--h2">Contact Form</h2>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label == 'error' ? 'danger' : label }} mb-3">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    {{ form_start(contactForm, {'attr': {'id': 'sf-contact-form'}, 'action': path('app_contact_submit')}) }}
        <div class="row">
            <div class="form-group col-12 col-md-6">
                {{ form_widget(contactForm.name) }}
                <div class="help-block with-errors-sf">{{ form_errors(contactForm.name) }}</div>
            </div>
            <div class="form-group col-12 col-md-6">
                {{ form_widget(contactForm.email) }}
                <div class="help-block with-errors-sf">{{ form_errors(contactForm.email) }}</div>
            </div>
            <div class="form-group col-12 col-md-12">
                {{ form_widget(contactForm.message) }}
                <div class="help-block with-errors-sf">{{ form_errors(contactForm.message) }}</div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-md-6 order-2 order-md-1 text-center text-md-start">
            </div>
            <div class="col-12 col-md-6 order-1 order-md-2 text-end">
                <button type="submit" class="btn"><i class="font-icon icon-send"></i> {{ 'contact.send'|trans }}</button>
            </div>
        </div>
    {{ form_end(contactForm) }}
</div>
