{% extends 'partials/_form_modal_base.html.twig' %}

{% set form_id = 'experience-form' %}

{% block form_body %}
    <div class="form-group col-12 col-md-6">{{ form_row(form.title, {
        'label': ('resume.experience.form.title.label')|trans,
        'attr': {'class': 'input form-control'}
    }) }}</div>
    <div class="form-group col-12 col-md-6">{{ form_row(form.company, {
        'label': ('resume.experience.form.company.label')|trans,
        'attr': {'class': 'input form-control'}
    }) }}</div>
    <div class="form-group col-12 col-md-6">{{ form_row(form.startDate, {
        'label': ('resume.experience.form.start_date.label')|trans,
        'attr': {'class': 'input form-control'}
    }) }}</div>
    <div class="form-group col-12 col-md-6">{{ form_row(form.endDate, {
        'label': ('resume.experience.form.end_date.label')|trans,
        'attr': {'class': 'input form-control'}
    }) }}</div>
    <div class="form-group col-12">{{ form_row(form.description, {
        'label': ('resume.experience.form.description.label')|trans,
        'attr': {'class': 'textarea form-control tinymce'}
    }) }}</div>
    <div class="form-group col-12 col-md-4">{{ form_row(form.position, {
        'label': ('resume.experience.form.position.label')|trans,
        'attr': {'class': 'input form-control'}
    }) }}</div>
{% endblock %}
