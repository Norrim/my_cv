{% extends 'partials/_form_modal_base.html.twig' %}

{% set form_id = 'client-edit-all-form' %}

{% block form_body %}
    <div class="col-12">
        <div id="clients-collection"
             data-prototype="{{ include('about/client/_client_entry.html.twig', { 'clientForm': form.clients.vars.prototype })|e('html_attr') }}"
             data-index="{{ form.clients|length }}">

            {% for clientForm in form.clients %}
                {{ include('about/client/_client_entry.html.twig', { 'clientForm': clientForm }) }}
            {% endfor %}
        </div>

        <button type="button" class="btn btn-sm btn-primary mt-3" id="add-client">
            <i class="feathericon-plus"></i> {{ 'client.form.add'|trans }}
        </button>
    </div>

    <script>
        (function() {
            const container = document.getElementById('crudModalContent');
            if (!container) return;

            container.addEventListener('click', function(e) {
                const addButton = e.target.closest('#add-client');
                if (addButton) {
                    const collectionHolder = document.getElementById('clients-collection');
                    if (!collectionHolder) return;

                    const prototype = collectionHolder.dataset.prototype;
                    const index = parseInt(collectionHolder.dataset.index);

                    const newForm = prototype.replace(/__name__/g, index);
                    collectionHolder.dataset.index = index + 1;

                    const wrapper = document.createElement('div');
                    wrapper.innerHTML = newForm;
                    const newEntry = wrapper.firstElementChild;

                    collectionHolder.appendChild(newEntry);
                }

                const removeBtn = e.target.closest('.js-remove-client');
                if (removeBtn) {
                    const entry = removeBtn.closest('.client-entry');
                    if (entry) {
                        entry.remove();
                    }
                }
            });
        })();
    </script>
{% endblock %}
