<div class="expertise-entry mb-3 position-relative">
    <div class="row g-3 mt-3">
        <div class="mb-3">
            <button type="button" class="btn btn-sm btn-outline-danger position-absolute top-0 end-0 js-remove-expertise" title="{{ 'global.delete'|trans }}">
                <i class="feathericon-trash-2"></i>
            </button>
        </div>

        <div class="form-group col-12">
            {{ form_row(expertiseForm.title, {
                'label': 'expertise.form.title.label'|trans,
                'attr': {'class': 'input form-control'}
            }) }}
        </div>
        <div class="form-group col-12">
            {{ form_row(expertiseForm.content, {
                'label': 'expertise.form.content.label'|trans,
                'attr': {'class': 'input form-control', 'rows': 3}
            }) }}
        </div>
        <div class="form-group col-12">
            {{ form_row(expertiseForm.position, {
                'label': 'expertise.form.position.label'|trans,
                'attr': {'class': 'input form-control'}
            }) }}
        </div>
    </div>
    <hr class="mt-4">
</div>
